FROM debian:12-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    fp-compiler postgresql-client ca-certificates python3 python3-pip \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /opt/legacy
COPY legacy.pas ./
COPY csv2xlsx.py ./
COPY run.sh /usr/local/bin/run_legacy.sh
RUN chmod +x /usr/local/bin/run_legacy.sh \
    && pip3 install --no-cache-dir --break-system-packages openpyxl

CMD ["/usr/local/bin/run_legacy.sh"]
